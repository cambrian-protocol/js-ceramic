{
  "name": "root",
  "scripts": {
    "test": "pnpm -r t",
    "build": "pnpm -r build",
    "docs": "pnpm typedoc",
    "ci:version": "pnpm changeset version",
    "ci:publish": "pnpm build && pnpm changeset publish",
    "lint": "pnpm -r lint",
    "clean": "pnpm clean:deps && pnpm clean:coverage && pnpm clean:build-artifacts",
    "clean:install:build": "pnpm clean && pnpm install && pnpm build",
    "clean:deps": "pnpx rimraf ./packages/*/node_modules ./node_modules",
    "clean:coverage": "pnpx rimraf ./packages/*/coverage",
    "clean:build-artifacts": "pnpx rimraf ./packages/*/lib"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-decorators": "^7.16.7",
    "@babel/plugin-transform-modules-commonjs": "^7.16.8",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-typescript": "^7.16.7",
    "@changesets/cli": "^2.25.0",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "babel-jest": "^27.4.6",
    "eslint": "^8.7.0",
    "eslint-config-3box": "^0.4.0",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^25.7.0",
    "jest": "^28.1.1",
    "jest-resolver-enhanced": "^1.0.1",
    "pnpm": "^7.13.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typedoc": "^0.23.2",
    "typescript": "^4.7.4"
  },
  "prettier": "eslint-config-3box/prettier.config",
  "dependencies": {
    "node-fetch": "pnpm:@achingbrain/node-fetch@^2.6.6"
  },
  "workspaces": [
    "packages/*"
  ]
}
